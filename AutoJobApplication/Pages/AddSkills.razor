@page "/add-skills"
@using AutoJobApplication.Interfaces
@inject ISkillService SkillService

<h3>Add Additional Skills</h3>
<textarea @bind="skills" placeholder="Enter additional skills here"></textarea>
<button @onclick="AddNewSkills">Add Skills</button>

@code {
    private string skills;

    private void AddNewSkills()
    {
        SkillService.AddSkills(skills.Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries).ToList());
        skills = string.Empty;
    }
}
