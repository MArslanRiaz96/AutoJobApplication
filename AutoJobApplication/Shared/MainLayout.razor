@inherits LayoutComponentBase

<PageTitle>AutoJobApplication</PageTitle>

@* Add logging to check initialization of layout *@
@code {
    protected override void OnInitialized()
    {
        Console.WriteLine("MainLayout initialized.");
    }
}

<div class="page">
    <div class="sidebar">
        @* Render the NavMenu component *@
        <NavMenu />
    </div>
    <div class="main-content">
        @Body
    </div>
</div>

<style>
    .page {
        display: flex;
    }

    .sidebar {
        width: 200px;
    }

    .main-content {
        flex-grow: 1;
        padding: 20px;
    }
</style>
